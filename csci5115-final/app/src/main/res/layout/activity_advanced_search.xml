<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvancedSearch">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="192dp"
        android:layout_marginRight="192dp"
        android:background="#fff"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"
        app:srcCompat="@drawable/reset" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="448dp"
        android:layout_height="66dp"
        android:background="#FFCC33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="298dp"
            android:layout_marginRight="298dp"
            android:layout_marginBottom="0dp"
            android:background="#FFCC33"
            app:srcCompat="@drawable/umnpic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="141dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:fontFamily="@font/neutrafacecondensed_bold"
            android:gravity="center"
            android:text="Courses"
            android:textAllCaps="true"
            android:textColor="#FFFF"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="420dp"
        android:layout_height="110dp"
        android:background="#f3f3f3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="88dp"
            android:layout_height="23dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helneumed"
            android:gravity="center"
            android:text="Search for:"
            android:textColor="#3a3a3a"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="-37dp">


            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="75dp"
                android:layout_marginRight="75dp"
                android:checked="false"
                android:fontFamily="@font/helneumed"
                android:text="UMN Professor" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/radioButton2"
                android:layout_toLeftOf="@+id/radioButton2"
                android:checked="false"
                android:fontFamily="@font/helneumed"
                android:text="UMN Course" />

        </RadioGroup>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="420dp"
        android:layout_height="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <EditText
            android:id="@+id/editViewNumber"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="-10dp"
            android:fontFamily="@font/helneuhv"
            android:hint="Course Number"
            android:inputType="number"
            android:textColor="#7A0019"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editViewName"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="38dp"
            android:layout_toEndOf="@+id/editViewNumber"
            android:layout_toRightOf="@+id/editViewNumber"
            android:fontFamily="@font/helneuhv"
            android:hint="Course Name"
            android:inputType="text|textCapWords"
            android:textColor="#7A0019"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editViewDept"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/editViewMinRating"
            android:layout_alignRight="@+id/editViewMinRating"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="-177dp"
            android:layout_marginRight="-177dp"
            android:layout_marginBottom="14dp"
            android:layout_toEndOf="@+id/editViewMinRating"
            android:layout_toRightOf="@+id/editViewMinRating"
            android:fontFamily="@font/helneuhv"
            android:hint="Department"
            android:inputType="text|textCapWords"
            android:textColor="#7A0019"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editViewMinRating"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/helneuhv"
            android:hint="Minimum Rating"
            android:inputType="number"
            android:textColor="#7A0019"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="49dp"
        android:layout_marginTop="152dp"
        android:background="#7A0019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="176dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="217dp"
            android:layout_marginLeft="217dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="6dp"
            android:background="#7A0019"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/search" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:background="#7A0019"
            android:fontFamily="@font/helneulight"
            android:gravity="center"
            android:text="Search"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="172dp"
        android:fontFamily="@font/helneuhv"
        android:gravity="center"
        android:text="Clear"
        android:textColor="@color/browser_actions_title_color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

</android.support.constraint.ConstraintLayout>